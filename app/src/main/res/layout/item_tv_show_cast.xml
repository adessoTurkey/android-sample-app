<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tvShowCast"
            type="com.adesso.movee.uimodel.TvShowCastUiModel" />

        <variable
            name="callback"
            type="com.adesso.movee.scene.tvshowdetail.TvShowCastCallback" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> callback.onTvShowCastClick(tvShowCast)}"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:innerRadius="0dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:imageFromUrl="@{tvShowCast.profilePath}"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="@{tvShowCast.name}"
            android:textAppearance="@style/TextField.Body2"
            tools:text="Emilia Clarke" />

    </LinearLayout>

</layout>